<%= form_with(model: job, local: true) do |f| %>

  <% if @job.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@job.errors.count, "error") %> prohibited this job from being saved:</h2>

      <ul>
      <% @job.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

<!-- Table for input fields with appropriate field type -->
	<table border="0" cellspacing="5" cellpadding="5">
		<tr valign="top">
			<td>
				<h4 class="f44336 red-text">Job Details:</h4>
				

		  	
				<div class="input-field">
				<%= f.label :name %>
				<%= f.text_field :name %>
				</div>
				<div class="input-field">
				<%= f.label :description %>
				<%= f.text_field :description %>
				</div>

  			<div class="input-field">
        <%= f.label :active %><br>
        <%= f.select :active, [['Yes', true], ['No', false]]  %>
        </div>  
			
			  <div class="actions">
			  <%= f.submit :class=>"waves-effect waves-red deep-orange darken-4 hoverable btn white-text" %>
			  <%= link_to 'Cancel', jobs_path, :class => 'waves-effect waves-red deep-orange darken-4 hoverable btn white-text' %>
			  </div>
			</td>
		</tr>
	</table>
<% end %>