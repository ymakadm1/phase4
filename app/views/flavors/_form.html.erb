<%= form_with(model: flavor, local: true) do |f| %>
  <% if @flavor.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@flavor.errors.count, "error") %> prohibited this flavor from being saved:</h2>

      <ul>
      <% @flavor.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
<!-- Table for input fields with appropriate field type -->
	<table border="0" cellspacing="5" cellpadding="5">
		<tr valign="top">
			<td>
				<h4 class="f44336 red-text">Flavor Details:</h4>
  <div class="input-field">
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>

<div class="input-field">
    <%= f.label :active %><br>
    <%= f.select :active, [['Yes', true], ['No', false]]  %>
  </div>

  
  
  <div class="actions">
			  <%= f.submit :class=>"waves-effect waves-red deep-orange darken-4 hoverable btn white-text" %>
			  <%= link_to 'Cancel', flavors_path, :class => 'waves-effect waves-red deep-orange darken-4 hoverable btn white-text' %>
			  </div>
			</td>
		</tr>
	</table>
<% end %>
