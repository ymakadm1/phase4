<%= form_with(model: store, local: true) do |f| %>

  <% if @store.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@store.errors.count, "error") %> prohibited this store from being saved:</h2>

      <ul>
      <% @store.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>


<!-- Table for input fields with appropriate field type -->

	<table border="0" cellspacing="5" cellpadding="5">
		<tr valign="top">
			<td>
				<h4 class="f44336 red-text">Store Details:</h4>
				<div class="input-field">
          <%= f.label :name %>
          <%= f.text_field :name %>
        </div>
      
        <div class="input-field">
          <%= f.label :street %>
          <%= f.text_field :street %>
        </div>
      
        <div class="input-field">
          <%= f.label :city %>
          <%= f.text_field :city %>
        </div>
      
        <div class="input-field">
          <%= f.label :state %>
          <%= f.text_field :state %>
        </div>
      
        <div class="input-field">
          <%= f.label :zip %>
          <%= f.number_field :zip %>
        </div>
      
        <div class="input-field">
          <%= f.label :phone %>
          <%= f.number_field :phone %>
        </div>
      
        <div class="input-field">
          <%= f.label :active %>
          <%= f.text_field :active %>
        </div>
				
				
			  <div class="actions">
			  <%= f.submit :class=>"waves-effect waves-red deep-orange darken-4 hoverable btn white-text" %>
			  <%= link_to 'Cancel', stores_path, :class => 'waves-effect waves-red deep-orange darken-4 hoverable btn white-text' %>
			  </div>
			</td>
		</tr>
	</table>
<% end %>